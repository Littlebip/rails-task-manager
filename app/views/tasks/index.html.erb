<h1>My tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %> <i class="fa-solid fa-trash-can"></i> <%=  link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%></li>
<% end %>
</ul>

<p class="text-decoration-none"><i class="fa-solid fa-plus"></i><%= link_to "Add a new task", new_task_path %></p>
