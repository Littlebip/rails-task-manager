<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><% if @task.completed %>
     <i class="fa-regular fa-square-check"></i> This task is completed
   <% else %>
     <i class="fa-regular fa-square"></i> This task is not completed yet
   <% end %>
</p>

<p class="text-decoration-none"><i class="fa-solid fa-rotate-left"></i><%= link_to "Back to list",  tasks_path %></p>
<p class="text-decoration-none"><i class="fa-solid fa-pencil"></i><%= link_to "Edit this task",  edit_task_path %></p>
